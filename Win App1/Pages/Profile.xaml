<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Win_App1.Pages.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Win_App1.Pages"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Профіль користувача" 
                       FontSize="24" 
                       FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Ім'я:" FontWeight="SemiBold"/>
                <TextBlock x:Name="UsernameText"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Email:" FontWeight="SemiBold"/>
                <TextBlock x:Name="EmailText"/>
            </StackPanel>

            <Button Content="Назад" 
                    Click="BackButton_Click"
                    HorizontalAlignment="Center"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Page>