<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Win_App1.Pages.Account"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win_App1.Pages"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <!-- Заголовок сторінки -->
        <TextBlock
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="24"
            FontFamily="Segoe UI"
            Foreground="White"
            Text="Account" />

        <!-- Поле для введення імені -->
        <TextBox
            x:Name="UsernameTextBox"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,120,0,0"
            Width="200"
            FontSize="18"
            FontFamily="Segoe UI"
            PlaceholderText="Enter your username" />

        <!-- Поле для введення електронної пошти -->
        <TextBox
            x:Name="EmailTextBox"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,190,0,0"
            Width="200"
            FontSize="18"
            FontFamily="Segoe UI"
            PlaceholderText="Enter your email" />

        <!-- Поле для введення пароля -->
        <PasswordBox
            x:Name="PasswordBox"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,260,0,0"
            Width="200"
            FontSize="18"
            FontFamily="Segoe UI"
            PlaceholderText="Enter your password" />

        <!-- Поле для підтвердження пароля -->
        <PasswordBox
            x:Name="ConfirmPasswordBox"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,330,0,0"
            Width="200"
            FontSize="18"
            FontFamily="Segoe UI"
            PlaceholderText="Confirm password"
            Visibility="Collapsed" />

        <!-- Кнопка Увійти/Зареєструватися -->
        <Button
            x:Name="ActionButton"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,330,0,0"
            Width="200"
            Height="50"
            FontSize="18"
            FontFamily="Segoe UI"
            Background="{ThemeResource SystemControlHighlightAccentBrush}"
            Foreground="White"
            Content="Увійти"
            Click="ActionButton_Click" />

        <!-- Кнопка перемикання режиму -->
        <Button
            x:Name="SwitchModeButton"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,400,0,0"
            Width="200"
            Height="50"
            FontSize="18"
            FontFamily="Segoe UI"
            Background="Transparent"
            Foreground="White"
            Content="Реєстрація"
            Click="SwitchModeButton_Click" />
    </Grid>
</Page>